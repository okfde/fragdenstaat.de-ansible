user = {{ db_user }}
password = {{ db_password }}
hosts = 127.0.0.1
dbname = {{ db_name }}
query = SELECT '{{ foi_email_host_user }}' AS destination FROM foirequest_foirequest WHERE secret_address = '%s' AND closed = FALSE
  UNION ALL SELECT fr.secret_address AS destination FROM foirequest_deferredmessage AS dm, foirequest_foirequest AS fr WHERE dm.request_id = fr.id AND dm.recipient = '%s' AND fr.closed = FALSE  AND dm.delivered = TRUE
  {% for em in email_alias %} UNION ALL SELECT '{{ em.to }}' AS destination WHERE '{{ em.from }}' = '%s'{% endfor %}
  {% for em in alias_foi_domains %} UNION ALL SELECT '{{ foi_email_host_user }}' AS destination WHERE '%s' ~ '.*_[0-9]+@{{ em }}'{% endfor %} LIMIT 1
