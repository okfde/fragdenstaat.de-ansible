[program:celery_{{ item.name }}]
directory={{ project_path }}
environment = DJANGO_SETTINGS_MODULE="{{ django_settings_file }}",DJANGO_CONFIGURATION="{{ django_configuration }}"
command={{ celery_scripts_dir }}/celery_{{ item.name }}

autostart=true
autorestart=true
stopsignal=TERM
stopwaitsecs=120

user={{ celery_user }}

stdout_logfile={{ celery_log_dir }}/celery_{{ item.name }}.log
redirect_stderr = true
