#!/bin/sh

DJANGODIR={{ project_path }}

# Activate the virtual environment.
cd $DJANGODIR
. {{ virtualenv_path }}/bin/activate
. {{ virtualenv_path }}/bin/postactivate

# Programs meant to be run under supervisor should not daemonize themselves
# (do not use --daemon).

export LD_LIBRARY_PATH=/usr/local/lib
export GIT_COMMIT=$(git rev-parse HEAD)

exec celery worker -A froide.celery:app -Q {{ item.queues }}{% if item.type is defined %} -O fair --max-tasks-per-child=1 --without-gossip{% endif %} -l INFO -E --concurrency={{ item.worker }}  -n {{ item.name }}@%h
