[program:{{ celerybeat_application_name }}]
directory={{ project_path }}
environment = DJANGO_SETTINGS_MODULE="{{ django_settings_file }}",DJANGO_CONFIGURATION="{{ django_configuration }}"
command={{ celery_scripts_dir }}/{{ celerybeat_application_name }}_start

autostart=true
autorestart=true
stopsignal=TERM
stopwaitsecs=120

user={{ celery_user }}

stdout_logfile={{ celerybeat_log_file }}
redirect_stderr = true
