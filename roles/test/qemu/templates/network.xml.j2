  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='virbr0' stp='on' delay='0'/>
  <mac address='52:54:00:47:4e:82'/>
  <ip address='192.168.122.1' netmask='255.255.255.0'>
    <dhcp>
      <range start='192.168.122.2' end='192.168.122.254'/>
{% for host in groups['vms'] %}
      <host mac='{{ hostvars[host].host_data.mac }}' name='{{ hostvars[host].hostname }}' ip='{{ hostvars[host].host_data.site_ipv4 }}'/>
{% endfor %}
    </dhcp>
  </ip>
</network>
