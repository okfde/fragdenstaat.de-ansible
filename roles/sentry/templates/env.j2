COMPOSE_PROJECT_NAME=sentry-self-hosted
COMPOSE_PROFILES=feature-complete
SENTRY_EVENT_RETENTION_DAYS=90
SENTRY_BIND=9000

SENTRY_IMAGE=getsentry/sentry:{{ sentry_version }}
SNUBA_IMAGE=getsentry/snuba:{{ sentry_version }}
RELAY_IMAGE=getsentry/relay:{{ sentry_version }}
SYMBOLICATOR_IMAGE=getsentry/symbolicator:{{ sentry_version }}
VROOM_IMAGE=getsentry/vroom:{{ sentry_version }}
UPTIME_CHECKER_IMAGE=ghcr.io/getsentry/uptime-checker:{{ sentry_version }}
TASKBROKER_IMAGE=ghcr.io/getsentry/taskbroker:{{ sentry_version }}

HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=1m30s
HEALTHCHECK_RETRIES=10
HEALTHCHECK_START_PERIOD=10s
HEALTHCHECK_FILE_INTERVAL=60s
HEALTHCHECK_FILE_TIMEOUT=10s
HEALTHCHECK_FILE_RETRIES=3
HEALTHCHECK_FILE_START_PERIOD=600s

POSTGRES_MAX_CONNECTIONS=100

SENTRY_MAIL_HOST=mail.fragdenstaat.de
SENTRY_BIND=127.0.0.1:9000
